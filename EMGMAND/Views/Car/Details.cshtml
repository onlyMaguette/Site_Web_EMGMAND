@model EMGMAND.Models.Car
@{
    ViewData["Title"] = "Détails de la voiture";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Marque</dt>
                        <dd class="col-sm-8">@Model.Brand.Name</dd>

                        <dt class="col-sm-4">Modèle</dt>
                        <dd class="col-sm-8">@Model.Model</dd>

                        <dt class="col-sm-4">Année</dt>
                        <dd class="col-sm-8">@Model.Year</dd>

                        <dt class="col-sm-4">Date de fabrication</dt>
                        <dd class="col-sm-8">@Model.ManufactureDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Description) ? "Aucune description" : Model.Description)</dd>

                        <dt class="col-sm-4">Statut</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsSold)
                            {
                            <span class="badge bg-secondary">Vendue</span>
                            }
                            else if (!Model.IsAvailable)
                            {
                            <span class="badge bg-warning">Non disponible</span>
                            }
                            else
                            {
                            <span class="badge bg-success">Disponible</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    @if (!string.IsNullOrEmpty(Model.PhotoPath))
                    {
                    <img src="@Model.PhotoPath" alt="Photo du véhicule" class="img-fluid" style="max-height: 300px;" />
                    }
                </div>
            </div>
        </div>
        <div class="card-footer text-end">
            @if (User.IsInRole("Admin"))
    {
        <!-- Bouton Modifier avec un style plus prononcé -->
            <a asp-action="AddOrEdit" asp-route-id="@Model.Id" class="btn btn-primary btn-lg me-2">
                <i class="fas fa-edit"></i> Modifier
            </a>

 <!-- Bouton Supprimer avec icône et style renforcé -->
            <button type="button" class="btn btn-danger btn-lg" data-bs-toggle="modal" data-bs-target="#deleteModal">
                <i class="fas fa-trash-alt"></i> Supprimer
            </button>
    }

            <!-- Bouton Retour à la liste -->
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>

    </div>
</div>

<!-- Modal de confirmation de suppression -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle text-warning"></i> Confirmation de suppression
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <!-- Phrase mise en évidence dans le modal -->
            <div class="modal-body">
                <div class="text-center">
                    <p><strong>Êtes-vous sûr de vouloir supprimer cette voiture ?</strong></p>
                    <p class="text-warning"><strong>Cette action est irréversible.</strong></p>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <!-- Bouton Annuler avec style amélioré -->
                <button type="button" class="btn btn-outline-secondary btn-lg" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Annuler
                </button>

                <!-- Bouton Supprimer avec style renforcé -->
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="fas fa-trash-alt"></i> Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
